@model QuotesC.ViewModel.ChineseVM

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutFormWidgets.cshtml";
}

<!-- PAGE CONTENT WRAPPER -->
<div class="page-content-wrap">

    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("Create", "Chinese", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", @id = "jvalidate", @autocomplete = "off" }))
            {

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"><strong>New Chinese</strong> Quote</h3>
                        <ul class="panel-controls">
                            <li><a href="#" class="panel-remove"><span class="fa fa-times"></span></a></li>
                        </ul>
                    </div>
                    <div class="panel-body">
                        <p>This is an Upload form to create a new Quote, you can upload your image and write your Quote</p>
                    </div>

                    <div class="panel-body">

                        <div class="form-group">
                            <label class="col-md-3 col-xs-12 control-label">File</label>
                            <div class="col-md-6 col-xs-12">
                                @*<input type="file" name="image" multiple id="file-simple" />*@
                                @Html.TextBoxFor(m => m.image, htmlAttributes: new { @type = "file", @id = "file-simple" })
                                <span class="help-block">Upload your Image here</span>
                            </div>
                            <div class="col-md-3 col-xs-12" id="errorMessage">

                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.imageName, "Image Name", htmlAttributes: new { @class = "col-md-3 col-xs-12 control-label" })
                            <div class="col-md-6 col-xs-12">
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                    @Html.EditorFor(model => model.imageName, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                                <span class="help-block">Write the Image Name</span>
                            </div>
                            <div class="col-md-3 col-xs-12" id="errorMessage">

                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Quote, htmlAttributes: new { @class = "col-md-3 col-xs-12 control-label" })
                            <div class="col-md-6 col-xs-12">
                                @Html.TextAreaFor(model => model.Quote, htmlAttributes: new { @class = "form-control", @rows = "5" })
                                <span class="help-block">Write your Quote</span>
                            </div>
                            <div class="col-md-3 col-xs-12" id="errorMessage">

                            </div>
                        </div>


                    </div>
                    <div class="panel-footer">
                        <button class="btn btn-default" formaction="~/Chinese/Index">Back to List</button>
                        <button class="btn btn-default">Clear Form</button>
                        <button class="btn btn-primary pull-right" type="submit">Submit</button>

                    </div>
                </div>

            }

        </div>
    </div>

</div>
<script>
    window.onload = function () {
        document.getElementById("quotes").classList = "xn-openable active";
    };
</script>
<!-- END PAGE CONTENT WRAPPER -->
@section Scripts
    {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
